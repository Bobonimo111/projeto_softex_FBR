<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        body {
            background-color: #f5f5f5;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 400px;
        }

        .card-header {
            background-color: white;
            border-bottom: none;
        }

        .card-body {
            padding: 1.5rem;
        }

        .btn-orange {
            background-color: #ff6600;
            color: white;
        }

        .btn-orange:hover {
            background-color: #e65c00;
        }

        .form-control:focus {
            box-shadow: none;
            border-color: #ff6600;
        }

        .form-label {
            margin-bottom: 0.5rem;
        }

        .form-text {
            color: #6c757d;
        }
    </style>
</head>

<body>
    <div class="card">
        <div class="card-body">
            <div class="text-center mb-4">
                <h5 class="card-title text-orange" style="color: #ff6600;">Login</h5>
                <p class="card-text">Entre com suas credenciais</p>
            </div>
            <form method="post" action="/cliente/login" onsubmit="controlarFormulario">
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <div class="input-group">
                        <input type="email" class="form-control" id="email" name="email"
                            placeholder="seuemail@exemplo.com">
                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="senha" class="form-label">Senha</label>
                    <div class="input-group">
                        <input type="password" class="form-control" id="senha" name="senha" placeholder="********">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-orange w-100">Entrar</button>
            </form>
        </div>
    </div>
</body>
<script>
    function controlarFormulario(ev) {
        ev.preventDefault();
    }
</script>

</html>