<html>



<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
    <style>
        body {
            background-color: #f5f5f5;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 400px;
        }

        .card-header {
            background-color: white;
            border-bottom: none;
        }

        .card-body {
            padding: 1.5rem;
        }

        .btn-orange {
            background-color: #ff6600;
            color: white;
        }

        .btn-orange:hover {
            background-color: #e65c00;
        }

        .form-control:focus {
            box-shadow: none;
            border-color: #ff6600;
        }

        .form-label {
            margin-bottom: 0.5rem;
        }

        .form-text {
            color: #6c757d;
        }

        .datepicker-dropdown {
            z-index: 10000 !important;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .datepicker table {
            width: 100%;
        }

        .datepicker table tr td,
        .datepicker table tr th {
            border-radius: 50%;
            padding: 5px;
        }

        .datepicker table tr td.day:hover,
        .datepicker table tr td.day.focused {
            background: #ff6600;
            color: white;
        }

        .datepicker table tr td.today {
            background: #ff6600;
            color: white;
        }
    </style>
</head>

<body>
    <div class="card">
        <div class="card-body">
            <div class="text-center mb-4">
                <h5 class="card-title text-orange" style="color: #ff6600;">Agenda</h5>
                <p class="card-text">Complete suas informações</p>
            </div>
            <form method="post" action="/agendamento/novo">
                <div class="mb-3">
                    <label for="opcao" class="form-label">Escolha uma opção:</label>
                    <select class="form-select" id="servicoId" name="servicoId">
                        <% servicoDatas.forEach(element=> { %>
                            <option value=" <%=element.id %>">
                                <%- element.nome %>
                            </option>
                            <% }) %>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="data" class="form-label">Data</label>
                    <div class="input-group">
                        <input type="date" class="form-control" id="data" name="data" placeholder="aaaa/mm/dd">
                        <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="calendarButton"><i
                                class="fas fa-calendar-alt"></i></button>
                    </div>
                    <div id="datepicker" class="dropdown-menu p-0"></div>
                </div>
                <div class="mb-3">
                    <label for="hora" class="form-label">Hora</label>
                    <div class="input-group">
                        <input type="time" min="08:00" max="18:00" class="form-control" id="hora" name="hora"
                            placeholder="--:--">
                        <span class="input-group-text"><i class="fas fa-clock"></i></span>
                    </div>
                </div>
                <input name="clienteId" id="clienteId" value="<%= session.id %>">
                <button type="submit" class="btn btn-orange w-100">Enviar</button>
            </form>
        </div>
        <script>
            document.getElementById("data").addEventListener("change", function () {
                const date = new Date(this.value);
                const formattedDate = `${date.getFullYear()}/${String(date.getMonth() + 1).padStart(2, '0')}/${String(date.getDate()).padStart(2, '0')}`;

                // Exibe no console ou define em outro campo, se necessário
                console.log("Data em formato personalizado:", formattedDate);
            });
        </script>

</html>